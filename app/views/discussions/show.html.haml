= content_for(:title, "#{@root_discussion[:title]} - #{@root_discussion[:author]}")

%h1#discussion_title= @root_discussion[:title]

%table
  %thead
    %th Body
    %th Author
  %tbody
    - @discussions_with_replies.each do | discussion_with_reply|
      %tr
        %td= discussion_with_reply[:body]
        %td= discussion_with_reply[:author]
        %td
        %td= link_to "Edit", edit_discussion_path(discussion_with_reply)
        %td
        %td= link_to "Delete", discussion_path(discussion_with_reply), method: :delete

%br

= form_tag discussions_create_reply_path do
  %input{:name => "root_discussion_id", :id => 'root_discussion_id', :value => @root_discussion[:id], :hidden => 'true'}
  %label{:id => 'body'} Body
  %input{:name => "body", :id => "body", :for => 'body'}
  %label{:id => 'author'} Author
  %input{:name => "author", :id => "author", :for => 'author'}
  =submit_tag "Post Reply", id: "post_reply_button"
