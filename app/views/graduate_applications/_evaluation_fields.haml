#spacer

#infoblock
  %h1 EVALUATIONS
  = form_for my_eval do |e|
    %fieldset
      %legend Your Evaluation:
      #my_eval_score
        = e.label :score, 'Score:'
        = e.select :score, [1, 2, 3, 4, 5]
      #my_eval_message
        = e.text_field :comment, placeholder: 'enter any comments here'
      #spacer
      #my_eval_submit
        -if my_eval.valid?
          = e.submit 'Update'
        -else
          = e.submit 'Create'
