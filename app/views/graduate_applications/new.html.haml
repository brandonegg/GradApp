%h3 Submit New Application

= form_for @graduate_application do |f|

  %fieldset
    %legend Personal Details
    .name_details
      = f.label :first_name, 'First Name:'
      = f.text_field 'first_name'

      = f.label :last_name, 'Last Name:'
      = f.text_field 'last_name'

    .age_details
      = f.label :dob, 'Date of Birth'
      = f.date_select :dob, {:start_year => 1900}

  %fieldset
    %legend Contact Details
    .email_details
      = f.label :email, 'Email:'
      = f.text_field 'email'

    .phone_details
      = f.label :phone, 'Phone:'
      = f.text_field 'phone'

  %fieldset
    %legend Education:
    = f.fields_for :educations do |educations_form|
      = render "education_fields", f: educations_form
    = link_to_add_fields "add more", f, :educations

  = f.submit 'Submit'
